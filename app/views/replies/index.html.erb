<div class="page-header">
  <h1>Replies</h1>
</div>

<p><%= link_to 'Add a New Reply', new_reply_url, class: 'btn btn-primary' %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Request</th>
      <th>Reply text</th>
      <th>Expert star rating</th>
      <th>Expert review</th>
      <th>Traveler star rating</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @replies.each do |reply| %>
      <tr>
        <td><%= reply.user_id %></td>
        <td><%= reply.request_id %></td>
        <td><%= reply.reply_text %></td>
        <td><%= reply.expert_star_rating %></td>
        <td><%= reply.expert_review %></td>
        <td><%= reply.traveler_star_rating %></td>
        <td><%= link_to '<i class="fa fa-search-plus"></i>'.html_safe, reply_url(reply), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_reply_url(reply), class: 'btn btn-warning' %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, reply_url(reply), method: 'delete', data: { confirm: "Do you really want to delete this reply?" }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

