<div class="page-header">
  <h1>Editing Reply #<%= @reply.id %></h1>
</div>

<%= form_tag(reply_url(@reply), method: 'patch', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :user_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :user_id, @reply.user_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :request_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :request_id, @reply.request_id, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :reply_text, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_area_tag :reply_text, @reply.reply_text, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :expert_star_rating, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :expert_star_rating, @reply.expert_star_rating, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :expert_review, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_area_tag :expert_review, @reply.expert_review, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :traveler_star_rating, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :traveler_star_rating, @reply.traveler_star_rating, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Update Reply", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
