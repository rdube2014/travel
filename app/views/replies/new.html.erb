<div class="page-header">
  <h1>New Reply</h1>
</div>

<%= form_tag(replies_url, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :user_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :user_id, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :request_id, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :request_id, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :reply_text, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_area_tag :reply_text, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :expert_star_rating, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :expert_star_rating, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :expert_review, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= text_area_tag :expert_review, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :traveler_star_rating, nil, class: 'col-md-2 control-label' %>
    <div class="col-md-6">
      <%= number_field_tag :traveler_star_rating, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Reply", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
